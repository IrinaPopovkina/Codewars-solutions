function animals(heads, legs) {
  let cows = (legs - heads * 2) / 2;
    let chickens = heads - (legs - heads * 2) / 2;
      if (chickens < 0 || cows < 0 || Math.round(chickens) !== chickens || Math.round(cows) !== cows){
        return "No solutions";
      } else if(heads === 0 || legs === 0){
        return [0, 0];
      } else {
    return [chickens, cows];
  }

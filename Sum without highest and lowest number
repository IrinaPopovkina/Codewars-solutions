function sumArray(arr) {
  if (arr === null || arr.length === 0 || arr.length === 1) return 0;  
  let sum = 0;
   for(let i = 0; i < arr.length; i++) {
        sum += arr[i];
  } 
  return sum - Math.max(...arr) - Math.min(...arr);
}
